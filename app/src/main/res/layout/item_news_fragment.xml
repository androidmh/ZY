<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/x10"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    app:cardCornerRadius="@dimen/x20"
    app:cardElevation="@dimen/x10"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x24">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x16"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/x30"
            android:textColor="@color/textColor_black"
            android:text=""
            tools:text="文章的标题文章的标题文章的标题文章的标题文章的标题"
            />


        <LinearLayout
            android:id="@+id/llayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginBottom="@dimen/x16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_thumb"
                android:layout_width="0dp"
                android:layout_height="@dimen/x120"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/shape_placeholder" />

            <ImageView
                android:id="@+id/iv_thumb2"
                android:layout_width="0dp"
                android:layout_height="@dimen/x120"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/shape_placeholder" />

            <ImageView
                android:id="@+id/iv_thumb3"
                android:layout_width="0dp"
                android:layout_height="@dimen/x120"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/shape_placeholder" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_sourceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/llayout"
            android:textSize="@dimen/x20"
            tools:text="来源:aaaaa"
            />

        <TextView
            android:id="@+id/tv_newstime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_sourceName"
            android:layout_marginLeft="@dimen/x24"
            android:layout_toRightOf="@id/tv_sourceName"
            android:textSize="@dimen/x20"
            tools:text="日期:aaaaa"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>